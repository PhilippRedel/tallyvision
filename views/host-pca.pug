extends layout

block content
  div(class='container-fluid', id='awards')
    //tabs
    ul(class='nav nav-pills justify-content-center', role='tablist')
      li(class='nav-item', role='presentation')
        a(class='nav-link active', data-toggle='pill', href='#panel-awards', id='tab-awards', role='tab')
          i(class='fas fa-trophy')
      each category, i in categories
        li(class='nav-item', role='presentation')
          a(class='nav-link', data-toggle='tab', href='#panel-' + category.title, id='tab-' + category.title, role='tab') #{category.title}
      li(class='nav-item', role='presentation')
        a(class='nav-link', data-toggle='pill', href='#panel-total', id='tab-total', role='tab') total
    //panels
    div(class='tab-content')
      div(class='tab-pane fade show active', id='panel-awards', role='tabpanel')
        img(src='/media/trophy.gif')
        h1 People's Choice Awards
      each category, i in categories
        div(class='tab-pane fade', id='panel-' + category.title, role='tabpanel')
          div(class='card shadow-lg')
            h4(class='card-header border-0') #{category.title}
            table(class='table table-striped mb-0')
              thead(class='thead-light')
                tr
                  th(class='col-place text-center text-nowrap', scope='col') #
                  th(class='col-contestant', colspan='2', scope='col') Contestant
                  th(class='col-score text-center text-nowrap', scope='col') #{category.title + ' score'}
              tbody
      div(class='tab-pane fade', id='panel-total', role='tabpanel')
        div(class='card shadow-lg')
          h4(class='card-header border-0') total
          table(class='table table-striped mb-0')
            thead(class='thead-light')
              tr
                th(class='col-place text-center text-nowrap', scope='col') #
                th(class='col-contestant', colspan='2', scope='col') Contestant
                th(class='col-score text-center text-nowrap', scope='col') Total score
            tbody

block footer
  script(src='/javascripts/host.js')
