extends layout

block content
	main#screen(class='container-fluid')
		section(class='row')
			div(class='col-4')

				// ...
				div#stats(class='card bg-dark h-100 shadow-lg')
					table(class='table table-dark')
						tbody
							tr
								td(class='align-middle')
									h3#stats-ballot --
									span(class='card-text text-muted') Current ballot
							tr
								td(class='align-middle')
									h3#stats-votes 0
									span(class='card-text text-muted') Vote(s) submitted
			div(class='col-8')

				// ...
				div(class='card bg-dark h-100 shadow-lg')
					div(class='card-body')
						canvas#ballot-chart



block footer
	script(src='/js/chart.js')
	script(src='/js/chartjs-plugin-colorschemes.js')
	script(src='/js/screen.js')